<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TimePicker
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:id="@+id/PickTime">
    </TimePicker>
    <TextView
        android:text="Sleep well friend"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="25px"
        android:id="@+id/SleepTextView"
        android:layout_centerHorizontal="true" />
    <ImageView
        android:src="@drawable/kirin_tor"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/SleepImageView1"
        android:layout_below="@id/SleepTextView"
        android:contentDescription="sleep image"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    <ImageView
        android:src="@drawable/fibonacci"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/SleepImageView2"
        android:layout_below="@id/SleepTextView"
        android:contentDescription="sleep image"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
     />
    <ImageView
        android:src="@drawable/growth"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/SleepImageView3"
        android:layout_below="@id/SleepTextView"
        android:contentDescription="sleep image"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:visibility="gone"/>
    />
    <Button
        android:text="Start clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/PickTime"
        android:layout_marginTop="25px"
        android:id="@+id/StartClockButton"
        android:layout_centerHorizontal="true" />
    <Button
        android:text="Stop clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/StopClockButton"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:visibility="gone"/>
</RelativeLayout>
