<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:text="Settings"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="25px"
        android:id="@+id/HeaderText"
        android:layout_centerHorizontal="true"/>
    <EditText
        android:layout_width="174.0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/HeaderText"
        android:id="@+id/ServerIPAddress"
        android:layout_centerHorizontal="true"
        android:hint="Server IP address"
        android:inputType="text"
        android:textColor="#006400"
        />
    <Button
        android:text="Find server"
        android:layout_width="150.0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/ServerIPAddress"
        android:layout_marginTop="25px"
        android:id="@+id/FindServerButton"
        android:layout_centerHorizontal="true"/>
    <TextView
        android:text="Brightness"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_marginTop="25px"
        android:id="@+id/BrightnessTextView"
        android:layout_below="@id/FindServerButton"
        android:layout_centerHorizontal="true"/>
    <SeekBar
        android:text="Find server"
        android:layout_width="150.0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/BrightnessTextView"
        android:layout_marginTop="25px"
        android:id="@+id/SeekBar"
        android:layout_centerHorizontal="true"
        android:max="255" 
        android:progress="100"/>
    <Button
        android:text="Set brightness"
        android:layout_width="150.0dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/SeekBar"
        android:layout_marginTop="25px"
        android:id="@+id/SetBrightnessButton"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>
